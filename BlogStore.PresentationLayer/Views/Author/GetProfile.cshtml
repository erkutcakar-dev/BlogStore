@model BlogStore.EntityLayer.Entities.AppUser
@{
    ViewData["Title"] = "GetProfile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <h4 class="card-title mb-0">
                        <i class="ti ti-user-circle me-2"></i>Bilgilerim
                    </h4>
                    <a href="/Author/EditProfile" class="btn btn-primary">
                        <i class="ti ti-edit me-1"></i>Düzenle
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-4">
        <div class="card">
            <div class="card-body text-center">
                <img src="@(Model.ImageUrl ?? "/flexy-bootstrap-lite-1.0.0/assets/images/profile/user-1.jpg")"
                     alt="Profil Fotoğrafı"
                     class="rounded-circle mb-3"
                     style="width: 150px; height: 150px; object-fit: cover;"
                     onerror="this.src='/flexy-bootstrap-lite-1.0.0/assets/images/profile/user-1.jpg';">

                <h4 class="mb-1">@Model.Name @Model.Surname</h4>
                <p class="text-muted mb-3">@(Model.Description ?? "Açıklama eklenmemiş")</p>

                <div class="row text-center">
                    <div class="col-12">
                        <div class="border-end">
                            <h4 class="mb-0 text-primary">@ViewBag.ArticleCount</h4>
                            <small class="text-muted">Makale</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-4">
                    <i class="ti ti-info-circle me-2"></i>Kişisel Bilgiler
                </h5>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="d-flex align-items-center">
                            <i class="ti ti-user text-primary me-3 fs-5"></i>
                            <div>
                                <small class="text-muted">Ad Soyad</small>
                                <h6 class="mb-0">@Model.Name @Model.Surname</h6>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="d-flex align-items-center">
                            <i class="ti ti-mail text-primary me-3 fs-5"></i>
                            <div>
                                <small class="text-muted">E-posta</small>
                                <h6 class="mb-0">@(Model.Email ?? "Bilinmiyor")</h6>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="d-flex align-items-center">
                            <i class="ti ti-id text-primary me-3 fs-5"></i>
                            <div>
                                <small class="text-muted">Kullanıcı Adı</small>
                                <h6 class="mb-0">@(Model.UserName ?? "Bilinmiyor")</h6>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <h6 class="mb-2">
                        <i class="ti ti-file-text text-primary me-2"></i>Hakkımda
                    </h6>
                    <p class="text-muted">
                        @(Model.Description ?? "Bilgi girilmemiş.")
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-4">
                    <i class="ti ti-activity me-2"></i>Hızlı İşlemler
                </h5>
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <a href="/Author/CreateArticle" class="btn btn-outline-primary w-100">
                            <i class="ti ti-plus me-2"></i>Makale Oluştur
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="/Author/MyArticleList" class="btn btn-outline-info w-100">
                            <i class="ti ti-list me-2"></i>Makalelerim
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="/Author/EditProfile" class="btn btn-outline-success w-100">
                            <i class="ti ti-edit me-2"></i>Profili Düzenle
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="/Comment/CommentList" class="btn btn-outline-warning w-100">
                            <i class="ti ti-message me-2"></i>Yorumlarım
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
